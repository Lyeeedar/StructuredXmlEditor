<ResourceDictionary
	x:Class="StructuredXmlEditor.View.GraphView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:StructuredXmlEditor.View"
	xmlns:data="clr-namespace:StructuredXmlEditor.Data">

	<ResourceDictionary.MergedDictionaries>
		<local:SharedResourceDictionary
			Source="Brushes.xaml" />
		<local:SharedResourceDictionary
			Source="GeneralStyles.xaml" />
	</ResourceDictionary.MergedDictionaries>

	<Style
		TargetType="{x:Type local:LinkControlPoint}">
		<Setter
			Property="Canvas.Left"
			Value="{Binding Path=CanvasX}" />
		<Setter
			Property="Canvas.Top"
			Value="{Binding Path=CanvasY}" />
		<Setter
			Property="Template">
			<Setter.Value>
				<ControlTemplate
					TargetType="{x:Type local:LinkControlPoint}">
					<Border
						Background="{Binding Colour}"
						BorderThickness="2"
						Width="14"
						Height="14"
						CornerRadius="7">
						<Border.RenderTransform>
							<TransformGroup>
								<ScaleTransform
									ScaleX="{Binding LinkParent.Graph.Scale}"
									ScaleY="{Binding LinkParent.Graph.Scale}"
									x:Name="scale" />
							</TransformGroup>
						</Border.RenderTransform>
						<Border.Style>
							<Style>
								<Setter
									Property="Border.BorderBrush"
									Value="{StaticResource BorderLightBrush}" />
								<Style.Triggers>
									<DataTrigger
										Binding="{Binding MouseOver}"
										Value="True">
										<Setter
											Property="Border.BorderBrush"
											Value="{StaticResource BorderDarkBrush}" />
									</DataTrigger>
								</Style.Triggers>
							</Style>
						</Border.Style>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style
		TargetType="{x:Type local:Connection}">
		<Setter
			Property="Template">
			<Setter.Value>
				<ControlTemplate
					TargetType="{x:Type local:Connection}">
					<Border
						Background="LawnGreen"
						BorderThickness="2"
						Width="14"
						Height="14"
						CornerRadius="7">
						<Border.Style>
							<Style>
								<Setter
									Property="Border.BorderBrush"
									Value="{StaticResource BorderLightBrush}" />
								<Style.Triggers>
									<DataTrigger
										Binding="{Binding Connection.MouseOver}"
										Value="True">
										<Setter
											Property="Border.BorderBrush"
											Value="{StaticResource BorderDarkBrush}" />
									</DataTrigger>
								</Style.Triggers>
							</Style>
						</Border.Style>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style
		TargetType="{x:Type local:LinkWrapper}">
		<Setter
			Property="Canvas.Left"
			Value="{Binding Link.Position.X}" />
		<Setter
			Property="Canvas.Top"
			Value="{Binding Link.Position.Y}" />
		<Setter
			Property="Opacity"
			Value="{Binding Link.Node.Opacity}" />
		<Setter
			Property="Template">
			<Setter.Value>
				<ControlTemplate
					TargetType="{x:Type local:LinkWrapper}">
					<Path
						x:Name="path"
						IsHitTestVisible="True"
						StrokeThickness="2"
						MouseEnter="path_MouseEnter"
						MouseLeave="path_MouseLeave">
						<Path.RenderTransform>
							<TransformGroup>
								<ScaleTransform
									ScaleX="{Binding Link.Graph.Scale}"
									ScaleY="{Binding Link.Graph.Scale}"
									x:Name="scale" />
							</TransformGroup>
						</Path.RenderTransform>
						<Path.Data>
							<MultiBinding
								Converter="{local:LinkPathMultiValueConverter}">
								<Binding
									Path="Link" />
								<Binding
									Path="Link.Position" />
								<Binding
									Path="Link.Link.Position" />
							</MultiBinding>
						</Path.Data>
						<Path.Style>
							<Style
								TargetType="{x:Type Path}">
								<Setter
									Property="Stroke"
									Value="MediumSpringGreen" />
								<Style.Triggers>
									<DataTrigger
										Binding="{Binding Link.GraphReferenceItem.LinkType}"
										Value="{x:Static data:LinkType.Reference}">
										<Setter
											Property="Stroke"
											Value="MediumPurple" />
									</DataTrigger>
								</Style.Triggers>
							</Style>
						</Path.Style>
					</Path>

					<ControlTemplate.Triggers>
						<Trigger
							Property="IsMouseOver"
							Value="True">
							<Setter
								TargetName="path"
								Property="StrokeThickness"
								Value="4" />
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style
		TargetType="{x:Type local:InProgressLinkWrapper}">
		<Setter
			Property="Canvas.Left"
			Value="{Binding Link.Position.X}" />
		<Setter
			Property="Canvas.Top"
			Value="{Binding Link.Position.Y}" />
		<Setter
			Property="Template">
			<Setter.Value>
				<ControlTemplate
					TargetType="{x:Type local:InProgressLinkWrapper}">
					<Path
						Stroke="LemonChiffon"
						StrokeThickness="2">
						<Path.RenderTransform>
							<TransformGroup>
								<ScaleTransform
									ScaleX="{Binding Link.Graph.Scale}"
									ScaleY="{Binding Link.Graph.Scale}"
									x:Name="scale" />
							</TransformGroup>
						</Path.RenderTransform>
						<Path.Data>
							<MultiBinding
								Converter="{local:LinkPathMultiValueConverter}">
								<Binding
									Path="Link" />
								<Binding
									Path="Link.Position" />
								<Binding
									Path="Dest" />
							</MultiBinding>
						</Path.Data>
					</Path>

				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

