<UserControl
	x:Class="StructuredXmlEditor.View.SkeletalAnimationEditor"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:StructuredXmlEditor.View">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="Auto" />
			<ColumnDefinition
				Width="*" />
			<ColumnDefinition
				Width="Auto" />
		</Grid.ColumnDefinitions>
		
		<!-- Options sidebar -->
		<DockPanel
			Width="24"
			Background="DarkGray">
			
		</DockPanel>
		
		<!-- Editor area -->
		<ContentPresenter
			Grid.Column="1"
			Content="{Binding EditorPanel, RelativeSource={RelativeSource AncestorType={x:Type local:SkeletalAnimationEditor}}}" />

		<!-- Overview panels -->
		
	</Grid>
</UserControl>
